{% extends 'base.html' %}
{% load static %}

{% block title %}Abonnement activé - PanierFacile{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-success">
                <div class="card-body text-center py-5">
                    {% if error %}
                        <!-- Erreur -->
                        <div class="mb-4">
                            <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="text-danger mb-3">Une erreur est survenue</h2>
                        <p class="lead text-muted mb-4">{{ error }}</p>
                        <a href="{% url 'subscription_upgrade' %}" class="btn btn-primary">
                            <i class="bi bi-arrow-clockwise me-2"></i>
                            Réessayer
                        </a>
                    {% else %}
                        <!-- Succès -->
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem; animation: scaleIn 0.5s ease-in-out;"></i>
                        </div>

                        <h2 class="text-success mb-3">Merci {{ customer_email }} !</h2>
                        <p class="lead mb-4">Votre abonnement a bien été activé</p>

                        <!-- Informations de l'abonnement -->
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <p class="mb-0 text-muted small">Montant</p>
                                        <h4 class="mb-0">{{ amount_total }}€/mois</h4>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <p class="mb-0 text-muted small">Statut</p>
                                        <h4 class="mb-0">
                                            <span class="badge bg-success">Actif</span>
                                        </h4>
                                    </div>
                                </div>
                                {% if subscription_id %}
                                <div class="mt-3">
                                    <p class="mb-0 text-muted small">ID d'abonnement</p>
                                    <code class="small">{{ subscription_id }}</code>
                                </div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Avantages débloqués -->
                        <div class="alert alert-info text-start mb-4">
                            <h5 class="alert-heading">
                                <i class="bi bi-unlock-fill me-2"></i>
                                Vous avez maintenant accès à :
                            </h5>
                            <ul class="mb-0">
                                <li>Création illimitée de paniers</li>
                                <li>Export vers Intermarché Drive</li>
                                <li>Recherche intelligente de produits</li>
                                <li>Assistant IA personnalisé</li>
                                <li>Toutes les fonctionnalités de PanierFacile</li>
                            </ul>
                        </div>

                        <!-- Actions -->
                        <div class="d-grid gap-2">
                            <a href="{% url 'home' %}" class="btn btn-success btn-lg">
                                <i class="bi bi-house-door me-2"></i>
                                Commencer à utiliser PanierFacile
                            </a>
                            <a href="{% url 'subscription_status' %}" class="btn btn-outline-secondary">
                                <i class="bi bi-credit-card me-2"></i>
                                Voir mon abonnement
                            </a>
                        </div>

                        <!-- Support -->
                        <div class="mt-4">
                            <p class="text-muted small">
                                <i class="bi bi-envelope me-2"></i>
                                Une confirmation a été envoyée à {{ customer_email }}
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
@keyframes scaleIn {
    0% { transform: scale(0); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
}
</style>
{% endblock %}
